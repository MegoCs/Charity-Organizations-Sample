@model CharityOrganizations.Pages.Manage.Service.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>انشاء</h1>

<h4>خدمة جديدة</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GranteeService.ServiceName" class="control-label"></label>
                <input asp-for="GranteeService.ServiceName" class="form-control" />
                <span asp-validation-for="GranteeService.ServiceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GranteeService.ServiceComment" class="control-label"></label>
                <input asp-for="GranteeService.ServiceComment" class="form-control" />
                <span asp-validation-for="GranteeService.ServiceComment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GranteeService.GranteeId" class="control-label"></label>
                <select asp-for="GranteeService.GranteeId" class ="form-control" asp-items="ViewBag.GranteeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="GranteeService.OrganizationId" class="control-label"></label>
                <select asp-for="GranteeService.OrganizationId" class ="form-control" asp-items="ViewBag.OrganizationId"></select>
            </div>
            <div class="form-group">
                <label asp-for="GranteeService.CreatedAt" class="control-label"></label>
                <input asp-for="GranteeService.CreatedAt" class="form-control" />
                <span asp-validation-for="GranteeService.CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
